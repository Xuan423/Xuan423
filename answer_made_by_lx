3.
#include<stdio.h>
int main()
{
	int i;
	int max = 0;
	do
	{
		scanf("%d",&i);
		if (i > max)
			max = i;
		if (i == 0)
			break;
	} while (1);
	printf("%d",max);
	return 0;
}
4.
#include<stdio.h>
int main()
{
	int i;
	int sum = 0;
	do
	{
		scanf("%d",&i);
		if (i % 2 == 1)
			sum += i;
		if (i == 0)
			break;
	} while (1);
	printf("%d",sum);
	return 0;
}
5.
#include<stdio.h>
int main()
{
	int i,n,sum=0;
	scanf("%d",&n);
	for ( i = 1; i <= n; i++)
		if (n%i == 0)
			sum ++;		
	printf("%d",sum);	
	return 0;
}
6.
#include<stdio.h>
int main()
{
	int i,n,k,sum1=0,sum2=0;
	scanf("%d",&n);
	for ( i = 0; i < n; i++)
	{
		scanf("%d",&k);
		if (k % 2 == 0)
			sum1 += k*k*k;
		else
			sum2 += k*k;
	}
	printf("%d,%d",sum1,sum2);
	return 0;
}
7. 
#include<stdio.h>
int main()
{
	int i,n;
	double s;
	scanf("%d",&n);
	for ( i = 1; i <= n; i++)
		s += 1.0/(3*i-2);
	printf("%.2f",s);
	return 0;
}
8. 
#include<stdio.h>
int main()
{
	int i,n,s;
	scanf("%d",&n);
	for (i=0;n>=0;i++)
	{
		if (n%2 == 0)
			s = n/2 + 2;
		else
			s = (n-1)/2+2;
		n -= s;
	}
	printf("%d",i);
	return 0;
}
9. 
#include<stdio.h>
int main()
{
	int i,flag=0;
	for ( i = 1000; i < 10000; i++)
	{
		if ((i%100 + i/100)*(i%100 + i/100)==i)
		{
			if (flag != 0)
				printf(" ");
			printf("%d",i);
			flag ++;
		}	
	}
	return 0;
}
10.
#include<stdio.h>
int main()
{
	char ch;
	int sum;
	do
	{
		scanf("%c",&ch);
		if(ch != '\n')
		{
			if ((ch - '0')%2 == 0)
				sum += ch - '0';
		}
	} while (ch != '\n');
	printf("%d\n",sum);
	return 0;
}
11. 
#include<stdio.h>
int f(int x)
{
	int sum=0;
	for (; x>0; x/=10)
		sum += x%10;
	return sum;
}
int main()
{
	int n;
	scanf("%d",&n);
	while (n/10 != 0)
		n = f(n);
	printf("%d\n",n);
	return 0;
}
